<h1>Login</h1>

<%= form_tag '/login' do %>
  Email <%= text_field_tag :email, nil, class: "form-control" %>
  <br>
  Password <%= password_field_tag :password, nil, class: "form-control" %>
  <br>
  <%= submit_tag "Login", class: "btn btn-primary pull-left" %>
<% end %>
<a href="/signup" class='btn btn-default'>Or Instead</a>